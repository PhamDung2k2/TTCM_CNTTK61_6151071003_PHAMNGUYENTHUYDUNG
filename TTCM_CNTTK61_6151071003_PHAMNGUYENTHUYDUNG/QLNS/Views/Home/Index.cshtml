@{
    ViewBag.Title = "Home Page";
}

<h3 class="text-center"> Tổng Quan Hệ Thống </h3>
<br />
<br />
@if (ViewBag.VP.Count > 0)
    {
<div class="alert alert-danger">Bạn Đã Chấm Công Vào Trễ Hoặc Đã Chấm Công Về Sớm <strong>@ViewBag.VP.Count lần</strong> trong <strong>tháng @DateTime.Now.AddMonths(-1).Month.</strong>  <strong>Hãy Có Trách Nhiệm, Cố Gắng Đúng Giờ !</strong> </div>
    }

<div class="card-content d-flex justify-content-around">
    <div class="card" style="width: 45%; height: 130px; line-height: 80px; ">
        <div class="card-body text-center" >
            <h4 class="card-title">@ViewBag.NV</h4>
            <p class="card-text">Số Lượng Nhân Viên</p>
        </div>
    </div>
    <div class="card" style="width: 45%; height: 130px; line-height: 80px;" >
        <div class="card-body text-center">
            <h4 class="card-title">@ViewBag.PB</h4>
            <p class="card-text">Số Lượng Phòng Ban</p>
        </div>
    </div>
</div>
    
