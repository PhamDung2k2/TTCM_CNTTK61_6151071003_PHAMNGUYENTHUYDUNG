
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quản lý nhân sự</title>
    <link rel="shortcut icon" href="~/Content/MyFolder/Image/icon-user.jpg" type="image/x-icon" />
    <link rel="stylesheet" type="text/css" href="~/Content/Style/LoginStyle.css" />
</head>
<body class="login-page">
    <div class="container">
        <div class="login-logo">
            <div class="circle"></div>
        </div>
        <div class="login-text">
            <h2>Đăng nhập hệ thống</h2>
        </div>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <form>
                <input type="text" class="form-control" placeholder="Tài khoản" name="TaiKhoan" value="">
                    <span><i class="fas fa-envelope"></i></span>
                <input type="password" class="form-control" placeholder="Mật khẩu" name="MatKhau" value="">
                <p class="login-msg">
                    <span class="text-danger">
                        @ViewBag.error
                    </span>
                </p>
                <button type="submit">Đăng nhập</button>
            </form>

         }

    </div>
</body>
</html>
