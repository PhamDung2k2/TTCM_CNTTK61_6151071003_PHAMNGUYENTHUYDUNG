    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NhanVien.IdNV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgayCC)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TVao)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TRa)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ViPham)
    </td>
    @{
        if (Convert.ToBoolean(Session["isAdmin"]))
        {
            <td>
                @*<a href="@Url.Action("Details", "TTChamCong", new { id = item.IdCC })" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="bottom" title="Chi Tiết"><i class="fa fa-book"></i></a>
                    <a href="@Url.Action("Edit", "TTChamCong", new { id = item.IdCC })" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="bottom" title="Chỉnh Sửa"><i class="fas fa-pen"></i></a>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#del_@item.IdCC">
