                *@<a href="@Url.Action("Edit", "HopDong", new { id = item.IdHD })" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="bottom" title="Chỉnh Sửa"><i class="fas fa-pen"></i></a>
                <a href="@Url.Action("Delete", "HopDong", new { id = item.IdHD })" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="bottom" title="Xóa"><i class="far fa-trash-alt"></i></a>

            </td>
        </tr>
    }

</table>